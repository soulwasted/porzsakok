								input#form-cart-company-address-code.form-control(type='text', placeholder='')
					.order__contact__group
						.checkbox
							h3
								label
									input#cart-toggle-delivery-address-cb(type="checkbox") 
									| #{__address__delivery}
						.order__contact__group__items#cart-toggle-delivery-address
							.form-group
								label.control-label(for='form-cart-delivery-name') #{__address__delivery__name}
								input#form-cart-delivery-name.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-delivery-address') #{__address__delivery__address}
								input#form-cart-delivery-address.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-delivery-address-number') Číslo popisné
								input#form-cart-delivery-address-number.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-delivery-city') #{__address__delivery__city}
								input#form-cart-delivery-city.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-delivery-address-code') #{__address__postcode}
								input#form-cart-delivery-address-code.form-control(type='text', placeholder='')
				.container
					.row
						.col-xs-12
							h3 #{__other_information_for_eshop}
					.row.choice
						.col-xs-12
							.form-group
								label.control-label(for='form-cart-note') #{__order_specification_and_eshop_messages}
								textarea#form-cart-note.form-control(rows='3')
					.row.choice
						.col-xs-12
							.checkbox
								label
									input(type="checkbox") 
									strong *&nbsp;#{__conditions__checkbox}
							.checkbox
								label
									input(type="checkbox") 
									| #{__newsletter__checkbox}
				.container.stripe-buttons
					.row
						.col-xs-12
							a.btn.btn-primary.btn-lg.btn-block(href="souhrn.html") 
								| #{__check_order}
								span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
							p #{__check_order__note}

			form#cart
				.container
					h3 #{__transport}
					.radio
						.order__choice
							label
								input(type="radio", name="radiosPayment") 
								//- | Magyar Posta
								| DPD
								span (#{__free})
							.order__price #{__free}
					.radio
						.order__choice
							label
								input(type="radio", name="radiosPayment") 
								//- | GLS
								| FUN Courier
								span (305 #{__currency})
							.order__price 305 #{__currency}
				.container
					h3 #{__express_expedition}
					.checkbox
						.order__choice
							label
								input(type="checkbox") 
								| #{__express_expedition}
								span #{__free}
								span (305 #{__currency})
							.order__price 305 #{__currency}
				.container
					h3 #{__payment_type}
					.radio
						.order__choice
							label
								input(type="radio", name="radiosPayment") 
								| #{__cash_on_delivery}
								span (305 #{__currency})
							.order__price 305 #{__currency}
					.radio
						.order__choice
							label
								input(type="radio", name="radiosPayment") 
								| #{__bank_transfer}
								span (#{__free})
							.order__price #{__free}
				.container.order__summary
					.order__discount
						.form-inline
							label(for='cart-code') #{__do_you_have_a_discount}
							.form-group
								.input-group
									.input-group-addon
										span.glyphicon.glyphicon-star(aria-hidden='true')
									input#cart-code.form-control(type='number', placeholder='#{__enter_the_code_here}')
							button.btn.btn-default(type='submit') #{__use_code}
					.order__summary-box
						.order__summary__row 
							.order__summary__title #{__order_total_without_tax}
							.order__price 14.720 #{__currency}
						.order__summary__row 
							.order__summary__title #{__tax}
							.order__price 3.974 #{__currency}
						.order__summary__row 
							.order__summary__title Zaokrouhlení
							.order__price 4 #{__currency}
						.order__summary__row 
							.order__summary__title
								strong #{__order_total_with_tax}
							.order__price 
								strong 18.690 #{__currency}
				.container.order__contact
					.order__contact__group
						h3 #{__contact_person}
						p #{__contact_person__note}
						.order__contact__group__items
							.form-group
								label.control-label(for='form-cart-name') *&nbsp;#{__name}
								input#form-cart-name.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-surname') *&nbsp;#{__surname}
								input#form-cart-surname.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-phone') *&nbsp;#{__phone}
								input#form-cart-phone.form-control(type='tel', placeholder='+40')
							.form-group
								label.control-label(for='form-cart-mail') *&nbsp;#{__email}
								input#form-cart-mail.form-control(type='email', placeholder='')
					.order__contact__group
						h3 #{__billing__address}
						.radio
							.order__choice
								label
									input#cart-toggle-person-rb(type="radio", name="radiosBuy", checked="checked") 
									| #{__address__person__checkbox}
						.radio
							.order__choice
								label
									input#cart-toggle-company-rb(type="radio", name="radiosBuy") 
									| #{__address__company__checkbox}
						.order__contact__group__items.order__contact__group__items--person#cart-toggle-person
							.form-group
								label.control-label(for='form-cart-person-name') #{__address__person__name}
								input#form-cart-person-name.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-person-address') #{__address__person__address}
								input#form-cart-person-address.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-person-address-number') #{__address__person__district}
								input#form-cart-person-address-number.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-person-city') #{__address__person__city}
								input#form-cart-person-city.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-person-address-code') #{__address__postcode}
								input#form-cart-person-address-code.form-control(type='text', placeholder='')
						.order__contact__group__items.order__contact__group__items--company#cart-toggle-company
							.form-group
								label.control-label(for='form-cart-company-dic') #{__address__company__dic}
								input#form-cart-company-dic.form-control(type='text', placeholder='')
							.form-group
								label.control-label(for='form-cart-company-ico') #{__address__company__ico}
								input#form-cart-company-ico.form-control(type='text', placeholder='')
							//- .form-group

					//- 	span  (zaplatíte pouze 4€ za dopravu)
			.container
				.row
					.col-sm-6.hidden-xs.gallery
						a(href='./img/vacs-bag/vacs-bag-detail-03-full.jpg', data-toggle="lightbox", data-gallery="gallery", data-title="Fotka sáčku")
							img.img-responsive(src='./img/vacs-bag/vacs-bag-detail-03-tn.jpg' alt="fotka sáčku")
					.col-xs-12.col-sm-6
						p
							strong.info Skladem: 
							strong Ano
						p
							strong.info Materiál:
							|  Antibakteriální filtrační netkaná textilie
						p
							strong.info Počet filtračných vrestev: 
							strong 5
						p
							| Sáčky pro vysavač ELECTROLUX UltraOne Z 8810 od značky VACS sú kvalitnejšou alternatívou bežných papierových sáčků, ktoré sú obvykle zložené iba z dvoch vrstiev s nižšou filtračnou schopnosťou. Tieto vrecká sú plnohodnotnou alternatívou k originálnemu výrobku.
						.visible-xs
							a(href='./img/vacs-bag/vacs-bag-detail-03-full.jpg', data-toggle="lightbox", data-gallery="gallery", data-title="Fotka sáčku")
								img.img-responsive(src='./img/vacs-bag/vacs-bag-detail-03-tn.jpg' alt="fotka sáčku")
						.row
							.col-xs-12.gallery
							//- .col-xs-12
							//- 	h2.h3 Fotografie
							.col-xs-4
								a(href='./img/vacs-bag/vacs-bag-detail-01-full.jpg', data-toggle="lightbox", data-gallery="gallery", data-title="Fotka sáčku")
									img.img-responsive(src='./img/vacs-bag/vacs-bag-detail-01-tn.jpg' alt="fotka sáčku")
							.col-xs-4
								a(href='./img/vacs-bag/vacs-bag-detail-02-full.jpg', data-toggle="lightbox", data-gallery="gallery", data-title="Fotka sáčku")
									img.img-responsive(src='./img/vacs-bag/vacs-bag-detail-02-tn.jpg' alt="fotka sáčku")
							.col-xs-4
								a(href='./img/vacs-bag/vacs-bag-detail-04-full.jpg', data-toggle="lightbox", data-gallery="gallery", data-title="Fotka sáčku")
									img.img-responsive(src='./img/vacs-bag/vacs-bag-detail-04-tn.jpg' alt="fotka sáčku")
			.container
				.row
					.col-xs-12
						h2.h3 Tento typ sáčku se hodí i do těchto modelů vysavačů značky ELECTROLUX:
				.row
					.col-xs-12
						p.readmore
							include ./includes/detail-more-models.jade
			.container.recommendation
				.row
					.col-xs-12
						h2.h3 Doporučujeme
				.row
					- for (var x = 0; x < 12; x++)
						.col-xs-12.col-sm-6.col-md-4
							.item
								img
								div
									h5 Vůně do vysavače - citrónová TEST
									p 
										span.info Balení obsahuje: 
										strong 5 vonných tyčinek
										br
										span.info Skladem: 
										strong Ano
										br
										span.info Cena: 
										strong 0.01 €
									a.btn.btn-primary.btn-sm(href="#") Vložit do košíku
			include ./includes/stripe-guarantee.jade
			include ./includes/footer.jade

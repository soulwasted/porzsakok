.item.item--cart
	.item__image
		a(href='/electrolux/100-ce')
			img
	.item__content
		.item__name
			a(href='/electrolux/100-ce')
				strong ELECTROLUX S-bag (Sleva 15%)
			.item__benefit + 10 motorových filtrů ZDARMA
			.item__benefit + 1 vůně ZDARMA
